<div class="card">
    <h5 class="card-header">Users</h5>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered first">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>DOB</th>
                        <th>Active</th>                        
                    </tr>
                </thead>
                <tbody>
                	<% @users.each do |user| %>
                    <tr>
                        <td> <%= user.first_name %> </td>
                        <td> <%= user.last_name %> </td>
                        <td> <%= user.email %> </td>
                        <td> <%= user.dob %> </td>
                        <td> <div class="switch-button switch-button-success">
                                <input type="checkbox" checked="" name="" id="switch<%= user.id %>">
                                <span><label for="switch<%= user.id %>"></label></span>
                            </div>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
                <tfoot>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>DOB</th>
                        <th>Status</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>