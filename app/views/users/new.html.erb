 <div class="card">
    <div class="card-header">
        <h3 class="mb-1">Registrations Form</h3>
        <p>Please enter your user information.</p>
    </div>
    <div class="card-body">
        <%= form_for @user do |f| %>
        <div class="form-group">
        <%= f.text_field :name, class:"form-control form-control-lg", required:"", placeholder: "User Name.." %>
        </div>
        <div class="form-group">
        <%= f.email_field :email,class:"form-control form-control-lg", required:"",placeholder:"Email" %>
        </div>
        <div class="form-group">
            <%= f.text_field :password, class:"form-control form-control-lg", required:"", placeholder:"Password" %>            
        </div>        
        <div class="form-group pt-2">
            <%= f.submit "Register My Account", class:"btn btn-block btn-primary" %>
        </div>
        <% end %>
    </div>
    <div class="card-footer bg-white">
        <p>Already member? 
            <%= link_to "Login Here.", login_url, class: "text-secondary" %>            
        </p>
    </div>
</div>

