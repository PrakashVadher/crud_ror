<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h3 class="mb-2">Edit Profile </h3>
            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Influencer Profile Template</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="row">    
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">Edit User Profile</h5>
            <div class="card-body">                
                <%= form_for @user, url:{action: :update}, html:{multipart:true} do |f| %>
                    <div class="form-group row">
                        <label class="col-12 col-sm-3 col-form-label text-sm-right">First Name</label>
                        <div class="col-12 col-sm-8 col-lg-6">
                            <%= f.text_field :first_name, class:"form-control", required:"",placeholder:"First Name" %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-12 col-sm-3 col-form-label text-sm-right">Last Name</label>
                        <div class="col-12 col-sm-8 col-lg-6">
                            <%= f.text_field :last_name, class:"form-control", required:"", placeholder:"Last Name"%>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-12 col-sm-3 col-form-label text-sm-right">Email</label>
                        <div class="col-12 col-sm-8 col-lg-6">
                            <%= f.email_field :email, class:"form-control", required:"", placeholder:"Email" %>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-12 col-sm-3 col-form-label text-sm-right">Gender</label>
                        <div class="col-12 col-sm-8 col-lg-6">
                            <div class="btn-group btn-group-toggle" data-toggle="buttons">                                
                                <label class="btn btn-primary">
                                    <%= f.radio_button :gender, 'male' %>Male                                    
                                </label>
                                <label class="btn btn-primary">
                                    <%= f.radio_button :gender, 'female' %>
                                    <input type="radio" name="options" id="option3"> Female
                                </label>
                            </div>
                        </div>
                    </div>                    

                    <div class="form-group row col">                        
                        <label class="col-12 col-sm-3 col-form-label text-sm-right">Birth Date</label>
                        <div class="form-group col-md-3">
                            <div class="input-group date" id="datetimepicker4" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker4">
                                <div class="input-group-append" data-target="#datetimepicker4" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-12 col-sm-3 col-form-label text-sm-right">Avatar</label>
                        <% if current_user.avatar.present? %>
                        <div class="user-avatar text-center d-block">
                            <%= image_tag("#{current_user.avatar.url}",alt:"User Avatar", class:"rounded-circle user-avatar-xxl") %>
                        </div>
                        <% end %>                        
                    </div>
                    
                    <div class="form-group row text-right">
                        <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                             <%= f.submit "Update", class: "btn btn-space btn-primary" %>
                            <%= link_to "Cancel", :back, class: "btn btn-danger" %>                            
                        </div>
                    </div>
                <% end %>                
            </div>
        </div>
    </div>
</div>