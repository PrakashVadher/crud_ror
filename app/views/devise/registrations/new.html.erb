<div class="card ">
    <div class="card-header text-center">
      <h1>Sign Up</h1>
      <span class="splash-description">Please enter your user information.</span></div>
    <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {multipart: :true}) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
                <%= f.label :"First Name" %>
                <%= f.text_field :first_name, class: "form-control form-control-lg", placeholder: "First name" %>
            </div>

            <div class="form-group">
                <%= f.label :"Last Name" %>
                <%= f.text_field :last_name, class: "form-control form-control-lg", placeholder:"Last Name" %>
            </div>

            <div class="form-group">
              <%= f.label :Email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control form-control-lg",placeholder: "Email" %>
            </div>

            <div class="form-group">
                <%= f.label :"Birth Date"%>
                <%= f.text_field :dob, class:"form-control form-control-lg", placeholder:"dd/mm/yyyy"%>
            </div>

            <div class="form-group">
              <%= f.label :"Select Gender", class:"custom-control custom-radio" do %>
                <%= f.radio_button :gender, 'male',checked:true, class:"custom-control-input" %>Male
              <% end %>

              <%= f.label :"Select Gender", class:"custom-control custom-radio" do %>
                <%= f.radio_button :gender, 'female'%>Female
              <% end %>              
              
            </div>

            <div class="form-group">
                <%= f.label(:avatar, "Upload Image", class:"col-form-label" ) %>
                <%= f.file_field :avatar, class:"form-control" %>                       
            </div>

            <div class="form-group">              
                  <%= f.label :Password %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "off",class: "form-control form-control-lg",placeholder: "*******" %>
            </div>
            <div class="form-group">
              <%= f.label :"confirm password" %>
                <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control form-control-lg",placeholder: "********" %>
            </div>
            <%= f.submit "Sign Up",class:"btn btn-primary btn-lg btn-block" %>                    
        <% end %>                
    </div>
    <div class="card-footer bg-white p-0  ">
        <div class="card-footer-item card-footer-item-bordered">
            <%= link_to "Sign In", new_user_session_url, class:"footer-link" %>
        </div>
        <div class="card-footer-item card-footer-item-bordered">
          <%= link_to "Forgot Password",new_user_password_url, class: "footer-link" %>                    
        </div>
    </div>
</div>